rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users koleksiyonu kuralları
    match /users/{userId} {
      // Herkes okuyabilir (profil görüntüleme için)
      allow read: if true;
      
      // Giriş yapmış kullanıcılar yazabilir (geçici olarak daha esnek)
      allow write: if request.auth != null;
      
      // Güncelleme için daha esnek kurallar
      allow update: if request.auth != null;
    }
    
    // Aktiviteler koleksiyonu
    match /activities/{activityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Beğeniler koleksiyonu
    match /likes/{likeId} {
      // Herkes okuyabilir (beğeni sayısı için)
      allow read: if true;
      
      // Sadece giriş yapmış kullanıcılar yazabilir
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Sadece kendi beğenisini silebilir
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Yorumlar koleksiyonu
    match /comments/{commentId} {
      // Herkes okuyabilir (yorumları görüntülemek için)
      allow read: if true;
      
      // Sadece giriş yapmış kullanıcılar yorum yazabilir
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Sadece kendi yorumunu silebilir
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Sohbetler koleksiyonu
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Mesajlar koleksiyonu
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
      allow create: if request.auth != null;
    }
  }
}
